<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="264dp"
        android:layout_height="317dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/TempConvert"
        app:srcCompat="@drawable/temp_removebg_preview"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="-53dp" />

    <TextView
        android:id="@+id/TempConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature Converter"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="30dp"
        android:onClick="OnConverterClick"
        app:layout_constraintTop_toBottomOf="@id/input"
        app:layout_constraintStart_toStartOf="@id/TempConvert"
        app:layout_constraintEnd_toEndOf="@id/TempConvert"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="594dp" />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the value in Celcius"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/TempConvert"
        app:layout_constraintEnd_toEndOf="@id/image" />

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Celcius degree"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/prompt"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintEnd_toEndOf="@id/image" />


</androidx.constraintlayout.widget.ConstraintLayout>